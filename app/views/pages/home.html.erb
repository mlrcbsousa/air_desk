<div class="banner" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.2) 50%), url(<%= image_path('coffee_banner.jpg') %>);">
  <div class="banner-content">
    <div class="loginbutton">
      <% if user_signed_in? %>
        <% link_to destroy_user_session_path, method: :delete do %>
          <i class="fa fa-sign-out"></i>  <%= t(".sign_out", default: "Log out") %>
        <% end %>
      <% else %>
        <!-- Login link (when logged out) -->
        <p>
          <%= link_to t(".sign_in", default: "Login"), new_user_session_path, class: "btn btn-link" %>
        <% end %>
      </p>
    </div>
    <!-- end of button -->
    <%= image_tag 'airdnc-white.png' %>
    <p>[EVERYTHING you need]</p>
    <%= render 'shared/search' %>
    <br>
    <%= link_to 'Discover our Offices', offices_path, class: "btn btn-primary" %>
  </div>
</div>
<div class="container">
  <div class="index-title">
    <h1 class="text-primary">Our top rated offices</h1>
  </div>
  <div class="row">
    <%= render @offices %>
  </div>
</div>