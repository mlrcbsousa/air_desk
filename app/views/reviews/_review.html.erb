<!-- views/components/_review.html.erb -->
  <div class="review">
    <div class="review-created-at">
      <p><span><%= review.created_at.strftime("%a, %-d %b %Y (at %-I:%M%P)") %></span></p>
    </div>
    <div class="review-rating">
      <% review.rating.times do %>
        <i class="fas fa-coffee active"></i>
      <% end %>
      <% (5 - review.rating).times do %>
        <i class="fas fa-coffee inactive"></i>
      <% end %>
    </div>
    <div class="review-body">
      <p><%= review.content %></p>
    </div>
  </div>
