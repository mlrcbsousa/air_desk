<!-- app/views/offices/show.html.erb -->
<div class="office"></div>
<div class="container margin-top-negative">
  <div class="row">
    <div class="col-xs-12 col-sm-8">
      <div class="office-show-card">
        <h1><%= @office.name %></h1>
      </div>
      <div class="office-show-card">
        <h3>Details:</h3>
        <p id="dayrate"><%= @office.dayrate %></p>
        <p><%= @office.capacity %></p>
        <p><%= @office.location %></p>
        <p><%= @office.description %></p>
      </div>
      <div class="office-show-card">
        <h3>Reviews:</h3>
        <div>
          <ul class="list-unstyled">
            <% @office.bookings.each do |booking| %>
              <li>
                <% if booking.review %>
                  <%= render 'components/review', review: booking.review %>
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
    <div class="col-xs-12 col-sm-4">
      <div class="office-show-card">
        <h3>New Booking</h3>
        <%= render 'components/form_booking', office: @office, booking: @booking %>
      </div>
    </div>
  </div>
</div>