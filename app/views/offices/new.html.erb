<!-- app/views/offices/new.html.erb -->
<div class="container">
  <div class="new">

    <div class="row">
      <div class="col-xs-12 col-sm-6 col-sm-offset-3">
        <div class="office-show-card">
          <h1>New office</h1>
          <div class="mt-3">
            <%= simple_form_for(@office) do |f| %>
              <%= f.input :name %>
              <%= f.input :location %>
              <%= f.input :description %>
              <%= f.input :capacity %>
              <%= f.input :dayrate %>
              <%= f.submit class: 'btn btn-primary' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

  </div>
</div>
