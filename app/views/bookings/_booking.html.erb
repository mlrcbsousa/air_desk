<!-- views/bookings/_booking.html.erb -->
<li>
  <div class="booking">
    <span>Your next work trip to <strong><%= booking.office.location %></strong></span>
    <p>
      Last updated: <strong><%= booking.updated_at.strftime("on %a, %-d %b %Y at %-I:%M%P") %></strong>
    </p>
    <span>Host:</span>
    <%= cl_image_tag booking.office.user.avatar.url, width: 50, class: "img-circle" %>
    <p>From: <strong><%= booking.start_date.strftime("%a, %-d %b %Y") %></strong></p>
    <p>To: <strong><%= booking.end_date.strftime("%a, %-d %b %Y") %></strong></p>

    <% if booking.review %>
      <span>Review:</span>
      <%= render 'reviews/review', review: booking.review %>
    <% elsif %>
      <%= link_to new_office_booking_review_path(booking.office, booking) do %>
        <i class="fas fa-thumbs-up"></i>
      <% end %>
    <% end %>

    <strong><%= booking.price %> â‚¬</strong>
  </div>
</li>
